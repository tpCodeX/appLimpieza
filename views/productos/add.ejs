<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Node.js</title>
  <link rel="shortcut icon" href="../img/icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="../css/style.css">
</head>

<body class="bg-dark">
    <%- include('../commons/navProducts'); -%>  <!--NAV comun de todas las páginas. Cambia la ruta segun la vista-->
  <br>
  <div class="container table-dark">
    <div class="text-center text-light">
      <h2>Tabla de Productos</h2>
    </div>
    <br>
    <form action="/productos/add-product" method="POST">
      <div class="row ">
        <div class="col-12 ">
          <label for="nombreProducto" class="form-label">Nombre de Producto</label>
          <input type="text" name="nombreProducto" id="nombreProducto" class="form-control secondary-btn">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-6">
          <label for="descripcion" class="form-label">Descripción</label>
          <input type="text" name="descripcion" id="descripcion" class="form-control secondary-btn">
        </div>
        <div class="col-6">
          <label for="precio" class="form-label">Precio</label>
          <input type="text" name="precio" id="precio" class="form-control secondary-btn">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-6">
          <div class="float-start">
            <a href="./" class="btn secondary-btn">Volver a Home</a>
          </div>
        </div>
        <div class="col-6">
          <div class="float-end">
            <button type="submit" class="btn secondary-btn">Agregar Producto</button>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="/js/script.js"></script>
</body>

</html>